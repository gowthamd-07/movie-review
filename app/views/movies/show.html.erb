<div class = "col-lg-10">
  <div class = "card rounded-0 shadow mt-5 mb-5">
    <div class = "card-body">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Name:</strong>
        <%= @movie.name %>
      </p>

      <p>
        <strong>Release date:</strong>
        <%= @movie.release_date %>
      </p>

      <%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-success" %> |
      <%= link_to 'Back', movies_path, class: "btn btn-success" %>

    </div>
  </div>
</div>
